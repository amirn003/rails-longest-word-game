<h1>New game</h1>
<div class="container">
  <ul>
  <% @grid.each do |letter| %>
    <li> <%= letter %> </li>
  <% end %>
  </ul>
</div>
<div class="container">
  <form action="/score" method="POST" data-turbo="false">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>

      <input class="col-lg-9" type="text" name="word" placeholder="Enter your word">
      <input type="hidden" name="hidden_grid" value="<%= @grid %>">
      <input class="col-lg-1" type="submit" value="Play">

  </form>
</div>
